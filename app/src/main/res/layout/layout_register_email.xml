<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_register_email"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/back_ground_splash"
    android:padding="24dp">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Email Đăng Ký"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/edtEmail"
        android:hint="Nhập email của bạn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_border"
        android:padding="12dp"
        android:inputType="textEmailAddress"/>

    <Button
        android:id="@+id/btnSendOTP"
        android:text="Nhận mã OTP"
        android:textColor="@android:color/white"
        android:backgroundTint="#A71317"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Bạn đã có tài khoản, đăng nhập tại đây nha!"
        android:layout_marginTop="16dp"
        android:textColor="#000000"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Hoặc bạn có thể đăng ký với"
        android:layout_marginTop="24dp"
        android:textSize="14sp"/>

    <Button
        android:text="Đăng ký với Google"
        android:layout_marginTop="8dp"
        android:background="@drawable/btn_white_border"
        android:textColor="#DB4437"
        app:backgroundTint="@null"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:text="Đăng ký với Facebook"
        android:layout_marginTop="8dp"
        android:background="@drawable/btn_white_border"
        android:textColor="#1877F2"
        app:backgroundTint="@null"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
