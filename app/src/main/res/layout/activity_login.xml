<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_ground_splash"
    android:padding="16dp"
    tools:context="com.example.demo.ActivityLogin">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Logo -->
        <ImageView
            android:id="@+id/imgLogo"
            android:src="@drawable/logo_main"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:contentDescription="Logo"
            android:layout_marginTop="20dp"/>

        <!-- Tiêu đề -->
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Đăng nhập"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="16dp"
            android:textColor="@android:color/black"
            android:layout_gravity="center"/>

        <!-- Ô nhập tên đăng nhập -->
        <EditText
            android:id="@+id/edit_text_username"
            android:hint="Tên đăng nhập"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_border"
            android:padding="12dp"
            android:inputType="textPersonName"
            android:layout_marginBottom="8dp"/>

        <!-- Ô nhập mật khẩu -->
        <EditText
            android:id="@+id/edit_text_password"
            android:hint="Mật khẩu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_border"
            android:padding="12dp"
            android:inputType="textPassword"/>

        <!-- Thông báo lỗi -->
        <TextView
            android:id="@+id/tvError"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Bạn chưa nhập tên đăng nhập và mật khẩu"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="14sp"
            android:layout_marginTop="6dp"
            android:visibility="gone"/>

        <!-- Nút đăng nhập -->
        <Button
            android:id="@+id/button_login"
            android:text="Đăng nhập"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:backgroundTint="#A71317"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"/>
        <CheckBox
            android:id="@+id/checkBoxRemember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ghi nhớ đăng nhập"
            android:layout_marginTop="8dp"/>


        <!-- Quên mật khẩu + Đăng ký -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:paddingHorizontal="20dp">

            <TextView
                android:id="@+id/text_view_forgot_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quên mật khẩu?"
                android:textSize="16sp"
                android:layout_gravity="start"
                android:clickable="true"
                android:focusable="true"
                android:textColor="#007BFF"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/text_view_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đăng ký"
                android:textSize="16sp"
                android:layout_gravity="end"
                android:clickable="true"
                android:focusable="true"
                android:textColor="#007BFF"/>
        </LinearLayout>

        <!-- Divider -->
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Hoặc bạn có thể đăng nhập với"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"/>

        <!-- Nút Google -->
        <Button
            android:id="@+id/button_google_login"
            android:text="Đăng nhập với Google"
            android:textAllCaps="false"
            android:textColor="#DB4437"
            app:backgroundTint="@null"
            android:background="@drawable/btn_white_border"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Nút Facebook -->
        <Button
            android:id="@+id/button_facebook_login"
            android:text="Đăng nhập với Facebook"
            android:textAllCaps="false"
            android:textColor="#1877F2"
            app:backgroundTint="@null"
            android:background="@drawable/btn_white_border"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"/>
    </LinearLayout>
</ScrollView>
