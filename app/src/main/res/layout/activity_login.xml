<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_login"
    android:padding="24dp">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Logo -->
        <ImageView
            android:id="@+id/imgLogo"
            android:src="@drawable/logo_main"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginTop="20dp"
            android:contentDescription="Logo"
            android:visibility="invisible"/>

        <!-- Tiêu đề -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng nhập"
            android:textSize="38sp"
            android:textStyle="bold"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="32dp"
            android:textColor="#E5769D" />

        <!-- Username -->
        <EditText
            android:id="@+id/edit_text_username"
            android:hint="Tên đăng nhập"
            android:drawableStart="@drawable/icon_user"
            android:drawablePadding="12dp"
            android:background="@drawable/edittext_border"
            android:padding="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"/>

        <!-- Mật khẩu + Mắt -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <EditText
                android:id="@+id/edit_text_password"
                android:hint="Mật khẩu"
                android:drawableStart="@drawable/icon_password"
                android:drawablePadding="12dp"
                android:inputType="textPassword"
                android:background="@drawable/edittext_border"
                android:padding="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/imgTogglePassword"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_eye_closed"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="12dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackgroundBorderless"/>
        </RelativeLayout>

        <!-- Checkbox Remember Me - GÓC TRÁI -->
        <CheckBox
            android:id="@+id/checkBoxRemember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ghi nhớ đăng nhập"
            android:textColor="#E5769D"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_gravity="start"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"/>

        <!-- Nút Đăng nhập -->
        <Button
            android:id="@+id/button_login"
            android:text="Đăng nhập"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:backgroundTint="#E5769D"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"/>

        <!-- Quên MK + Đăng ký -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/text_view_forgot_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Quên mật khẩu?"
                android:textColor="#007BFF"
                android:textSize="15sp"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:id="@+id/text_view_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đăng ký"
                android:textColor="#007BFF"
                android:textSize="15sp"
                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>

        <!-- Divider -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hoặc đăng nhập bằng"
            android:textSize="14sp"
            android:textColor="#666666"
            android:visibility="gone"
            android:layout_marginBottom="12dp"/>

        <!-- NÚT GOOGLE -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_google_login"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Đăng nhập với Google"
            android:textColor="#000000"
            app:backgroundTint="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="28dp"
            app:strokeWidth="1dp"
            app:strokeColor="#FC909F"
            app:icon="@drawable/ic_google_logo"
            app:iconGravity="textStart"
            app:iconPadding="12dp"
            app:iconTint="@null"
            android:visibility="gone"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:layout_constraintTop_toBottomOf="@id/button_facebook_login"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Nút Facebook -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_facebook_login"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="5dp"
            android:text="Đăng nhập với Facebook"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="28dp"
            app:strokeWidth="1.5dp"
            app:strokeColor="#1877F2"
            app:icon="@drawable/ic_facebook_logo"
            app:iconGravity="textStart"
            app:iconPadding="12dp"
            app:iconTint="@null"
            android:visibility="gone"
            app:backgroundTint="#FFFFFF"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:layout_constraintTop_toBottomOf="@id/button_login"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </LinearLayout>
</ScrollView>
