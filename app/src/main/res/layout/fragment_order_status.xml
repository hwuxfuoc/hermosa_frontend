<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/white"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            app:tint="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:text="Đơn hàng của bạn"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@+id/btnCancelOrder"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeColor="#E0E0E0"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:id="@+id/layoutHeaderPending"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible">
                        <TextView
                            android:id="@+id/tvStatusTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Đang xử lý"
                            android:textColor="#B71C1C"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvStatusDesc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Đang gửi đơn đặt hàng của bạn ..."
                            android:textColor="#000000"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutHeaderConfirmed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tvStatusTag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#B71C1C"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="6dp"
                            android:text="Chuẩn bị"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvTimeEstimate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="20:00 - 20:10"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/tvStatusMsg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="On time. Chúng tôi đã nhận được đơn..."
                            android:textColor="#4CAF50"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layoutTimeline"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:layout_marginBottom="16dp">

                        <!-- Icon quán (bắt đầu) -->
                        <ImageView
                            android:id="@+id/ivStore"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/circle_green"
                            android:padding="8dp"
                            android:src="@drawable/ic_store_gray"
                            app:tint="@android:color/white"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <!-- Đường line + hiệu ứng chạy -->
                        <View
                            android:id="@+id/progressLine"
                            android:layout_width="0dp"
                            android:layout_height="6dp"
                            android:background="@drawable/progress_track_gray"
                            app:layout_constraintStart_toEndOf="@id/ivStore"
                            app:layout_constraintEnd_toStartOf="@id/ivUser"
                            app:layout_constraintTop_toTopOf="@id/ivStore"
                            app:layout_constraintBottom_toBottomOf="@id/ivStore" />

                        <!-- Hiệu ứng thanh xanh chạy bên trong line -->
                        <View
                            android:id="@+id/progressBar"
                            android:layout_width="60dp"
                            android:layout_height="6dp"
                            android:background="@drawable/progress_bar_green"
                            android:visibility="gone"
                            app:layout_constraintStart_toStartOf="@id/progressLine"
                            app:layout_constraintTop_toTopOf="@id/progressLine"
                            app:layout_constraintBottom_toBottomOf="@id/progressLine" />

                        <!-- Icon người dùng (kết thúc) -->
                        <ImageView
                            android:id="@+id/ivUser"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/circle_gray"
                            android:padding="8dp"
                            android:src="@drawable/ic_location_outline"
                            app:tint="@android:color/white"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardOrderSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeColor="#E0E0E0"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:id="@+id/layoutItemList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tổng cộng"
                                android:textColor="#000"
                                android:textStyle="bold"
                                android:textSize="16sp"/>
                            <TextView
                                android:id="@+id/tvTotalPriceList"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:text="660.000 VND"
                                android:textColor="#000"
                                android:textStyle="bold"
                                android:textSize="16sp"/>
                        </RelativeLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvOrderItems"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:nestedScrollingEnabled="false"/>
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/layoutPaymentInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <LinearLayout
                            android:id="@+id/groupMethod"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/ivPaymentMethod"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/icon_momo"/>

                            <TextView
                                android:id="@+id/tvPaymentMethodName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:text="Momo"
                                android:textColor="#000"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/groupMethod"
                            android:layout_marginTop="24dp"
                            android:text="Tổng cộng"
                            android:textColor="#000"/>

                        <TextView
                            android:id="@+id/tvTotalPayment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_below="@id/groupMethod"
                            android:layout_marginTop="24dp"
                            android:text="660.000 VND"
                            android:textStyle="bold"
                            android:textColor="#000"/>
                    </RelativeLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardAddressShip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:visibility="visible"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeColor="#E0E0E0"
                app:strokeWidth="1dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/ivDotStore"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_dot_blue"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvStoreName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="Hermosa"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/ivDotStore"
                        app:layout_constraintTop_toTopOf="@id/ivDotStore" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="27 Đường Số 8, Phường Linh Trung..."
                        android:textColor="#777777"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@id/tvStoreName"
                        app:layout_constraintTop_toBottomOf="@id/tvStoreName" />

                    <ImageView
                        android:id="@+id/ivPinUser"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="24dp"
                        android:src="@drawable/ic_pin_red_n"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvStoreName" />

                    <TextView
                        android:id="@+id/tvAddressName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="Trường ĐH Công nghệ Thông tin"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/ivPinUser"
                        app:layout_constraintTop_toTopOf="@id/ivPinUser" />

                    <TextView
                        android:id="@+id/tvDetailAddress"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Khu phố 6, Phường Linh Trung..."
                        android:textColor="#777777"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@id/tvAddressName"
                        app:layout_constraintTop_toBottomOf="@id/tvAddressName" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardPickupNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                app:cardBackgroundColor="#FFF0F0"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeColor="#FFCDD2"
                app:strokeWidth="1dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="4dp"
                    android:padding="16dp"
                    android:text="Đơn đặt và nhận hàng tại cửa hàng!! \nVui lòng theo dõi trạng thái đơn hàng..."
                    android:textColor="#D32F2F"
                    android:textSize="13sp" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeColor="#E0E0E0"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_edit_note"
                        app:tint="#333333"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/tvCancelNote"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Lưu ý: Bạn chỉ có thể hủy đơn trong quá trình xác nhận"
                        android:textColor="#333333"
                        android:textSize="14sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCancelOrder"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        android:text="Hủy Đơn Hàng"
        android:textSize="16sp"
        android:textStyle="bold"
        app:backgroundTint="#B71C1C"
        app:cornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>