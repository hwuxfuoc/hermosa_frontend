<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".fragment.FragmentProfile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- ===== HEADER ===== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="#A71317"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="20dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/icon_profile"
                android:contentDescription="User Icon"
                app:tint="#FFFFFF" />

            <TextView
                android:id="@+id/tvProfileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginStart="16dp" />
        </LinearLayout>

        <!-- ===== USER INFO CARD ===== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/background_barcode_card"
            android:elevation="2dp"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:padding="20dp">

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phu Thuan"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tvUserPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2345 points • Thành viên Kim Cương"
                android:textSize="14sp"
                android:textColor="#333333"
                android:layout_marginTop="2dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="vertical"
                android:background="@drawable/background_left_rounded_white"
                android:padding="12dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/barcodeImage"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:src="@drawable/background_left_rounded_white"
                    android:scaleType="fitCenter"
                    android:contentDescription="Barcode" />

                <TextView
                    android:id="@+id/tvBarcodeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="31 7658 8204 8361 8824"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvNote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="When dining-in, you can ask our staff to scan this code to collect point"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- ===== FUNCTION MENU ===== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="#F8F8F8">

            <!-- Ví voucher -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/background_white_rounded"
                android:padding="14dp"
                android:layout_marginBottom="6dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/icon_voucher"
                    app:tint="#000000"
                    android:layout_marginEnd="10dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ví voucher"
                    android:textSize="15sp"
                    android:textColor="#000000" />

            </LinearLayout>

            <!-- Địa chỉ -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/background_white_rounded"
                android:padding="14dp"
                android:layout_marginBottom="6dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/icon_address_profile"
                    android:layout_marginEnd="10dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Địa chỉ"
                    android:textSize="15sp"
                    android:textColor="#000000" />

            </LinearLayout>

            <!-- Sản phẩm yêu thích -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/background_white_rounded"
                android:padding="14dp"
                android:layout_marginBottom="6dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/icon_favorite_profile"
                    app:tint="#000000"
                    android:layout_marginEnd="10dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sản phẩm yêu thích"
                    android:textSize="15sp"
                    android:textColor="#000000" />

            </LinearLayout>

            <!-- Lịch sử đơn hàng -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/background_white_rounded"
                android:padding="14dp"
                android:layout_marginBottom="6dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/icon_history_profile"
                    app:tint="#000000"
                    android:layout_marginEnd="10dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Lịch sử đơn hàng"
                    android:textSize="15sp"
                    android:textColor="#000000" />

            </LinearLayout>

            <!-- ===== PERSONAL SETTING ===== -->
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Personal Setting"
                android:textColor="#A71317"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="6dp"
                android:textSize="15sp" />

            <!-- Đăng xuất -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/background_white_rounded"
                android:padding="14dp"
                android:layout_marginBottom="6dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/icon_login"
                    app:tint="#000000"
                    android:layout_marginEnd="10dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Đăng xuất"
                    android:textSize="15sp"
                    android:textColor="#000000" />

            </LinearLayout>

            <!-- Xóa tài khoản -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/background_white_rounded"
                android:padding="14dp"
                android:layout_marginBottom="6dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/icon_trash"
                    app:tint="#000000"
                    android:layout_marginEnd="10dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Xóa tài khoản"
                    android:textSize="15sp"
                    android:textColor="#000000" />

            </LinearLayout>

            <!-- Quên mật khẩu -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/background_white_rounded"
                android:padding="14dp"
                android:layout_marginBottom="6dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/icon_password"
                    app:tint="#000000"
                    android:layout_marginEnd="10dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Quên mật khẩu"
                    android:textSize="15sp"
                    android:textColor="#000000" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
