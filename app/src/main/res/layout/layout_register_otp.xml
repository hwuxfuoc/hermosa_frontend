<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lauout_register_otp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/back_ground_splash"
    android:padding="24dp">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Xác Thực Mã OTP"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/otp1"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:inputType="number"
            android:textSize="22sp"
            android:maxLength="1"
            android:background="@drawable/edittext_border"
            android:layout_margin="4dp"/>
        <EditText
            android:id="@+id/otp2"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:inputType="number"
            android:textSize="22sp"
            android:maxLength="1"
            android:background="@drawable/edittext_border"
            android:layout_margin="4dp"/>
        <EditText
            android:id="@+id/otp3"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:inputType="number"
            android:textSize="22sp"
            android:maxLength="1"
            android:background="@drawable/edittext_border"
            android:layout_margin="4dp"/>
        <EditText
            android:id="@+id/otp4"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:inputType="number"
            android:textSize="22sp"
            android:maxLength="1"
            android:background="@drawable/edittext_border"
            android:layout_margin="4dp"/>
        <EditText
            android:id="@+id/otp5"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:inputType="number"
            android:textSize="22sp"
            android:maxLength="1"
            android:background="@drawable/edittext_border"
            android:layout_margin="4dp"/>
        <EditText
            android:id="@+id/otp6"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:inputType="number"
            android:textSize="22sp"
            android:maxLength="1"
            android:background="@drawable/edittext_border"
            android:layout_margin="4dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvOtpError"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Mã OTP không hợp lệ!"
        android:textColor="#EB4341"
        android:visibility="gone"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/tvTimer"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="4:58"
        android:textSize="20sp"
        android:textColor="#EB4341"
        android:layout_marginTop="8dp"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Bạn không nhận được? Gửi lại OTP tại đây"
        android:layout_marginTop="8dp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/tvResendOtp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gửi lại OTP"
        android:textColor="#A71317"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btnVerifyOtp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xác nhận OTP"
        android:textColor="@android:color/white"
        android:backgroundTint="#A71317"
        android:layout_marginTop="24dp"/>
</LinearLayout>
