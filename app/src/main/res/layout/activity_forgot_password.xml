<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_ground_splash"
    android:padding="24dp"
    tools:context=".ActivityForgotPassword">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Back + Tiêu đề -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start|center_vertical"
            android:layout_marginBottom="32dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@android:color/transparent"
                android:src="@drawable/icon_return_arrow"
                app:tint="#000000" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Quên mật khẩu"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:gravity="center" />

            <ImageButton
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@android:color/transparent"
                app:tint="#000000" />
        </LinearLayout>

        <!-- Email -->
        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Nhập email của bạn"
            android:background="@drawable/bg_edittext_white"
            android:padding="16dp"
            android:inputType="textEmailAddress"
            android:layout_marginBottom="24dp" />

        <!-- Nút gửi -->
        <Button
            android:id="@+id/btnSendReset"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Gửi mật khẩu tạm qua email"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:backgroundTint="#B30000"
            android:layout_marginBottom="16dp" />

        <!-- Gợi ý gửi lại -->
        <TextView
            android:id="@+id/tvResendHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Không nhận được? Gửi lại tại đây"
            android:textColor="#B71C1C"
            android:textSize="15sp"
            android:textStyle="bold"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="12dp"
            android:layout_marginBottom="32dp" />

        <!-- Thông báo thành công -->
        <LinearLayout
            android:id="@+id/layoutSuccess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone"
            android:background="#E8F5E8"
            android:padding="24dp"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đã gửi mật khẩu tạm!"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#2E7D32"
                android:layout_marginTop="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vui lòng kiểm tra email (bao gồm mục Spam)"
                android:textColor="#43A047"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Ghi chú -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mật khẩu tạm thời có hiệu lực trong 15 phút.\nSau khi đăng nhập, bạn có thể đổi mật khẩu trong phần Cài đặt."
            android:textColor="#666666"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginTop="32dp"
            android:lineSpacingExtra="4dp" />

    </LinearLayout>
</ScrollView>