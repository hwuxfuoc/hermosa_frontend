<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"> <com.google.android.material.card.MaterialCardView
    android:id="@+id/cardHeader"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    app:cardBackgroundColor="@android:color/white"
    app:cardElevation="0dp"
    app:cardCornerRadius="0dp"
    app:strokeWidth="0dp"
    app:layout_constraintTop_toTopOf="parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_arrow_back"
            app:tint="#000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chọn hoặc nhập Voucher"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="serif"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="5dp"
        app:strokeWidth="0dp"
        app:layout_constraintTop_toBottomOf="@id/cardHeader"
        tools:layout_editor_absoluteX="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp">

            <EditText
                android:id="@+id/etVoucherCode"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_weight="1"
                android:background="@drawable/background_edit_text"
                android:hint="Nhập mã giảm giá"
                android:paddingHorizontal="12dp"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btnApplyInput"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:layout_marginStart="12dp"
                android:backgroundTint="#E0E0E0"
                android:text="Sử dụng"
                android:textColor="#666"
                android:textStyle="bold"
                app:cornerRadius="4dp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardListHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="5dp"
        app:strokeWidth="0dp"
        app:layout_constraintTop_toBottomOf="@id/cardInput"
        tools:layout_editor_absoluteX="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã giảm giá đang khả dụng"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Chỉ được chọn 1 mã"
                android:textColor="#777777"
                android:textSize="12sp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvVoucherList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingTop="12dp"
        android:paddingHorizontal="10dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/cardListHeader"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"/>
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="16dp"
        android:visibility="visible"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:id="@+id/tvSavings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bạn đã tiết kiệm được 125.000 VND"
            android:textColor="#B71C1C"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Xác nhận"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:background="@drawable/bg_button_red"
            app:backgroundTint="#B71C1C"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>