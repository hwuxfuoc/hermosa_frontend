<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <!-- Icon -->
        <ImageView
            android:id="@+id/imgVoucher"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/icon_voucher"
            app:tint="#B40000"
            android:layout_marginEnd="10dp"/>

        <!-- Nội dung voucher -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvVoucherTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Discount 20% for order over 500.000 VND"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/tvVoucherCondition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order from 500.000 VND"
                android:textSize="12sp"
                android:textColor="#666"/>

            <TextView
                android:id="@+id/tvVoucherExpire"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E.X.P: 31/12/2025"
                android:textSize="12sp"
                android:textColor="#666"/>
        </LinearLayout>

        <!-- Nút Use -->
        <Button
            android:id="@+id/btnApplyVoucher"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Use"
            android:textAllCaps="false"
            android:backgroundTint="#B71C1C"
            android:layout_gravity="center_vertical"/>


    </LinearLayout>

</androidx.cardview.widget.CardView>
