<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:paddingBottom="12dp">

    <ImageView
        android:id="@+id/ivStep1"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_store_gray"
        app:tint="#4CAF50"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/line1"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/line1"
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:background="@drawable/progress_track_gray"
        app:layout_constraintBottom_toBottomOf="@id/ivStep1"
        app:layout_constraintEnd_toStartOf="@id/ivStep4"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/ivStep1"
        app:layout_constraintTop_toTopOf="@id/ivStep1" />

    <ImageView
        android:id="@+id/ivStep4"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_location_outline"
        app:tint="#4CAF50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/line1"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>