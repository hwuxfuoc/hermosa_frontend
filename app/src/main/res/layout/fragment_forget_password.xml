<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_forgot_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_ground_splash"
    android:padding="24dp"
    tools:context=".ActivityForgotPassword">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Back + Tiêu đề -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start|center_vertical"
            android:layout_marginBottom="32dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@android:color/transparent"
                android:src="@drawable/icon_return_arrow"
                app:tint="#000000" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Quên mật khẩu"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:gravity="center" />

            <ImageButton
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@android:color/transparent"
                app:tint="#000000" />
        </LinearLayout>

        <!-- Email -->

        <!-- Nút gửi yêu cầu -->

        <!-- Gợi ý -->

        <!-- Đặt lại mật khẩu mới -->
        <TextView
            android:id="@+id/tvNewPassTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đặt lại mật khẩu mới"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="12dp" />

        <!-- Mật khẩu tạm thời -->
        <EditText
            android:id="@+id/edtTempPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mật khẩu tạm thời"
            android:background="@drawable/bg_edittext_white"
            android:padding="12dp"
            android:inputType="textPassword"
            android:layout_marginBottom="8dp" />

        <!-- Mật khẩu mới -->
        <EditText
            android:id="@+id/edtNewPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mật khẩu mới của bạn"
            android:background="@drawable/bg_edittext_white"
            android:padding="12dp"
            android:inputType="textPassword"
            android:layout_marginBottom="8dp" />

        <!-- Xác nhận mật khẩu -->
        <EditText
            android:id="@+id/edtConfirmPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Xác nhận lại mật khẩu mới"
            android:background="@drawable/bg_edittext_white"
            android:padding="12dp"
            android:inputType="textPassword"
            android:layout_marginBottom="8dp" />

        <!-- Thông báo lỗi -->
        <TextView
            android:id="@+id/tvError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mật khẩu tạm thời không đúng"
            android:textColor="#B30000"
            android:visibility="gone"
            android:textSize="14sp"
            android:layout_marginBottom="12dp" />

        <!-- Nút đặt lại mật khẩu -->
        <Button
            android:id="@+id/btnResetPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đặt lại mật khẩu"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:backgroundTint="#B30000"
            android:layout_marginBottom="16dp" />

        <!-- Ghi chú -->
        <TextView
            android:id="@+id/tvNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trong trường hợp khẩn cấp, liên hệ Admin để được hỗ trợ đặt lại mật khẩu!"
            android:textColor="#555"
            android:textSize="13sp"
            android:gravity="center"
            android:layout_marginTop="8dp" />

    </LinearLayout>
</ScrollView>
