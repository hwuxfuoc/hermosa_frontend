<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_ground_splash"
    android:padding="24dp">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Logo -->
        <ImageView
            android:id="@+id/imgLogo"
            android:src="@drawable/logo_main"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginTop="20dp"
            android:contentDescription="Logo"/>

        <!-- Tiêu đề -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng nhập"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"
            android:textColor="#000000"/>

        <!-- Username -->
        <EditText
            android:id="@+id/edit_text_username"
            android:hint="Tên đăng nhập"
            android:drawableStart="@drawable/icon_user"
            android:drawablePadding="12dp"
            android:background="@drawable/edittext_border"
            android:padding="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"/>

        <!-- Mật khẩu + Mắt -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <EditText
                android:id="@+id/edit_text_password"
                android:hint="Mật khẩu"
                android:drawableStart="@drawable/icon_password"
                android:drawablePadding="12dp"
                android:inputType="textPassword"
                android:background="@drawable/edittext_border"
                android:padding="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/imgTogglePassword"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_eye_closed"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="12dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackgroundBorderless"/>
        </RelativeLayout>

        <!-- Checkbox Remember Me - GÓC TRÁI -->
        <CheckBox
            android:id="@+id/checkBoxRemember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ghi nhớ đăng nhập"
            android:textSize="14sp"
            android:layout_gravity="start"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"/>

        <!-- Nút Đăng nhập -->
        <Button
            android:id="@+id/button_login"
            android:text="Đăng nhập"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:backgroundTint="#A71317"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"/>

        <!-- Quên MK + Đăng ký -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/text_view_forgot_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Quên mật khẩu?"
                android:textColor="#007BFF"
                android:textSize="15sp"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:id="@+id/text_view_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đăng ký"
                android:textColor="#007BFF"
                android:textSize="15sp"
                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>

        <!-- Divider -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hoặc đăng nhập bằng"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="12dp"/>

        <!-- Nút Google -->
        <Button
            android:id="@+id/button_google_login"
            android:text="Đăng nhập với Google"
            android:textAllCaps="false"
            android:textColor="#DB4437"
            app:backgroundTint="@null"
            android:background="@drawable/btn_white_border"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Nút Facebook -->
        <Button
            android:id="@+id/button_facebook_login"
            android:text="Đăng nhập với Facebook"
            android:textAllCaps="false"
            android:textColor="#1877F2"
            app:backgroundTint="@null"
            android:background="@drawable/btn_white_border"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"/>
    </LinearLayout>
</ScrollView>
